{
  "compilerOptions": {
    //core next.js base tsconfig settings
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, //can enable later as we continue integrating typescript
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    //cleaner imports; makes all imports relative to the project root
    "baseUrl": ".",
    //enable @ import aliasing
    "paths": {
      "@/*": ["app/*"],
      "@components/*": ["app/ui/*"], //ui components
      "@/lib/*": ["lib/*"], // utilities and helpers
      "@/styles/*": ["styles/*"],  //global styles or scss variables
      "@root/*": ["*"]
    },

    "plugins": [
      {
        "name": "next"
      },
    ],
    //type safety improvement for react, ensuring vscode + eslint have full autocomplete and type support
    "types": ["node", "react", "vitest/globals"],
  },
  //lets typescript analyze my exisitng javascript files until migration
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
, "vitest.config.ts", "next.config.cjs"  ],
  "exclude": [
    "node_modules"
  ]
}
